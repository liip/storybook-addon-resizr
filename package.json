{
  "name": "@liip/storybook-addon-resizr",
  "version": "0.1.3",
  "description": "A Storybook addon to resize the story iframe with draggable handles",
  "keywords": [
    "storybook-addon",
    "resize",
    "viewport",
    "responsive",
    "layout",
    "design"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/liip/storybook-addon-resizr"
  },
  "license": "MIT",
  "author": "Liip",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./manager": "./dist/manager.js",
    "./preview": {
      "types": "./dist/preview.d.ts",
      "default": "./dist/preview.js"
    },
    "./package.json": "./package.json"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "manager.js",
    "preview.js"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "start": "pnpm run build && concurrently \"pnpm run build:watch\" \"pnpm run storybook --quiet\"",
    "test": "echo \"No tests configured\"",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier \"**/*.{js,ts,tsx}\" --list-different",
    "format:fix": "pnpm format --write",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "@storybook/icons": "^1.3.0",
    "@storybook/react-vite": "^10.1.0",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/parser": "^8.48.0",
    "concurrently": "^9.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "storybook": "^10.1.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.48.0",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "storybook": "^10.1.0"
  },
  "bundler": {
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ],
    "exportEntries": [
      "src/index.ts"
    ]
  },
  "storybook": {
    "displayName": "Resizr",
    "unsupportedFrameworks": [],
    "icon": "https://raw.githubusercontent.com/liip/storybook-addon-resizr/main/icon.svg",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "web-components",
      "svelte",
      "preact"
    ]
  },
  "packageManager": "pnpm@11.0.0-dev.1005+sha512.91f84a392eea348ea4852a182912d2520273a4336f933b78cc44bc931eb999923c097e9433a9b355adc1f725725ea99082fc9f032a559df832632e764c92c798"
}
